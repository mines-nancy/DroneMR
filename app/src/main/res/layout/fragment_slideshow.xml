<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="48dp">


    </FrameLayout>

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/stream_view" />

    <com.parrot.drone.groundsdk.stream.GsdkStreamView
        android:id="@+id/stream_view"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="parent"></com.parrot.drone.groundsdk.stream.GsdkStreamView>
    <ImageView
        android:id="@+id/objectDetectionImageView"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="@+id/stream_view"
        app:layout_constraintBottom_toBottomOf="@+id/stream_view"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"  android:layout_height="230dp"/>
    <ImageView
        android:id="@+id/poseDetectionImageView"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="@+id/stream_view"
        app:layout_constraintBottom_toBottomOf="@+id/stream_view"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"  android:layout_height="230dp"/>
    <Button
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Start Recording"
        style="?android:attr/buttonBarButtonStyle"/>

    <Button
        android:id="@+id/detect_object_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Object Detection"
        style="?android:attr/buttonBarButtonStyle"/>
    <Button
        android:id="@+id/detect_pose_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detect_object_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Pose Detection"
        style="?android:attr/buttonBarButtonStyle"/>

    <Button
        android:id="@+id/minus_button"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/stream_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="-"
        style="?android:attr/buttonBarButtonStyle"/>

    <Button
        android:id="@+id/plus_button"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/stream_view"
        app:layout_constraintEnd_toStartOf="@+id/minus_button"
        android:text="+"
        style="?android:attr/buttonBarButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
